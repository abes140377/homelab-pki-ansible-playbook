#! /usr/bin/env bash
#MISE description="Install Python dependencies from requirements file"
#USAGE arg "[file]" help="Path to Python requirements file" default="requirements.txt"

uv pip install -r requirements.txt

# Temporarily uninstall pytest-ansible to avoid plugin conflicts
uv pip uninstall -q pytest-ansible

# Reinstall pytest-ansible (part of ansible-dev-tools)
# "uv pip install -q -r requirements.txt"
